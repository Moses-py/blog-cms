{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/jodit/page.jsx",
    "features/comments/components/CommentBox",
    "pages/_app.js",
    "components/editor/Editor.js",
    "lexical/plugins/AutoLinkPlugin.js",
    "lexical/plugins/CodeHighlightPlugin.js",
    "lexical/plugins/ListMaxIndentPluginLevel.js",
    "lexical/plugins/ToolbarPlugin.js",
    "lexical/Editor.jsx"
  ],
  "exclude": ["node_modules"]
}
